build-type:          Simple
cabal-version:       >=1.8

-- Support building on earlier GHC, at least 7.4.1 and 7.4.2.
-- The current solution does not scale very well since dependencies
-- are listed under each section (lib, exe, test1, test2, ..)
-- see https://github.com/haskell/cabal/issues/417
-- and the related discussion.

library
  hs-source-dirs:    katt-lib/src
  exposed-modules:   Utils.Katt.Configuration,
                     Utils.Katt.Init,
                     Utils.Katt.SourceHandler,
                     Utils.Katt.Upload,
                     Utils.Katt.Utils

  ghc-options:       -Wall

  if impl(ghc <= 7.4.2)
    build-depends:  
                     base == 4.5.*,
                     bytestring >= 0.9.2.1,
                     containers >= 0.4.2.1
  else
    build-depends:  
                     base == 4.6.*,
                     bytestring == 0.10.*,
                     containers == 0.5.*
  
  build-depends:     
                     blaze-builder == 0.3.*,
                     ConfigFile == 1.1.*,
                     directory == 1.2.*,
                     errors == 1.4.*,
                     filepath == 1.3.*,
                     http-streams == 0.6.*,
                     HsOpenSSL >= 0.10.3 && < 0.11,
                     io-streams,
                     mtl >= 2.0 && < 2.2,
                     parsec == 3.1.*,
                     unix == 2.6.*,
                     url == 2.1.*,
                     zip-archive == 0.1.*

executable katt
  hs-source-dirs:    katt-cli/src
  main-is:           Main.hs
  ghc-options:       -O2 -threaded -Wall

  if impl(ghc <= 7.4.2)
    build-depends:  
                     base == 4.5.*,
                     bytestring >= 0.9.2.1
  else
    build-depends:  
                     base == 4.6.*,
                     bytestring == 0.10.*
  
  build-depends:     
                     http-streams == 0.6.*,
                     HsOpenSSL >= 0.10.3 && < 0.11,
                     katt,
                     mtl >= 2.0 && < 2.2

